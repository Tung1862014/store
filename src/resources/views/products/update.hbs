                        aria-describedby='emailHelp'
                        placeholder='ví dụ: Màn hình oleg sam sung'
                        value='{{product.name}}'
                    /> 
                </div>
                <div class='form-group'>
                     <label id='url-image-{{product._id}}'>Hình ảnh</label>
                     <p id='url-images-{{product._id}}' style="display: none;">{{product.image}}</p>
                    {{!-- <label for='image' class='image-product'>Chọn file ảnh</label> --}}
                    <script>
                                var img = document.getElementById('url-images-'+`{{product._id}}`).innerHTML;
                                var urlImg = img.split(",");
                                //var image = document.getElementById('url-image-'+`{{this._id}}`);
                                //image.src = urlImg[0];
                                //urlImgconsole.log(image.src);
                                urlImg.forEach(function(e, index, arr){
                                    var image = document.createElement('img');
                                    image.src = e;
                                    image.width = '50';
                                    image.height = '50';
                                    image.style.marginLeft = '20px';
                                    var imageUrl = document.getElementById('url-image-'+`{{product._id}}`);
                                    imageUrl.appendChild(image);
                                    //console.log(image.src);
                                })
                                
                            </script> 
                    <input
                        type='file'
                        name='image'
                        class='form-control mt-2'
                        multiple="multiple"
                        {{!-- style='display:none;' --}}
                       
                    />
                </div>
